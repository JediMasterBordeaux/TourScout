---
import type { Post } from '~/types';
import { getPermalink } from '~/utils/permalinks';

interface Props {
  posts: Post[];
  title?: string;
}

const { posts, title } = Astro.props;
---

{title && <h2 class="text-2xl font-bold mb-6">{title}</h2>}
<div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
  {posts.map((post) => (
    <a
      href={getPermalink(post.slug)}
      class="block p-6 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 bg-white dark:bg-slate-800"
    >
      <h3 class="text-xl font-bold mb-2">{post.title}</h3>
      <p class="text-muted dark:text-slate-400">{post.excerpt}</p>
    </a>
  ))}
</div> 