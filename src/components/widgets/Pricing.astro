---
import WidgetWrapper from '~/components/ui/WidgetWrapper.astro';

const {
  id,
  isDark = false,
  classes = {},
  bg = await Astro.slots.render('bg'),
} = Astro.props;
---

<WidgetWrapper id={id} isDark={isDark} containerClass={`max-w-7xl mx-auto ${classes?.container ?? ''}`} bg={bg}>
  <div class="relative py-16 sm:py-20">
    <div class="mx-auto max-w-7xl px-4 sm:px-6">
      <div class="text-center">
        <h2 class="text-4xl md:text-5xl font-bold leading-tighter tracking-tighter mb-4 font-heading dark:text-gray-200">
          Simple Pricing for the Beta
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-400 mb-12 max-w-3xl mx-auto">
          Join TOUR SCOUT during the beta period for just $12/month. No long-term commitment. Cancel anytime.
        </p>
      </div>

      <div class="flex flex-col md:flex-row justify-center gap-8">
        {/* Beta Pricing Card */}
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-blue-600 to-purple-600 rounded-xl blur-md opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
          <div class="relative bg-white dark:bg-gray-900 ring-1 ring-gray-200 dark:ring-gray-800 rounded-xl p-8 sm:p-10">
            <div class="flex flex-col">
              <div>
                <h3 class="text-2xl font-semibold text-center text-gray-900 dark:text-white">
                  Beta Access
                </h3>
                <p class="mt-4 text-center text-gray-600 dark:text-gray-400">
                  Full access to all current features
                </p>
                <p class="mt-8 flex items-baseline justify-center gap-x-2">
                  <span class="text-5xl font-bold tracking-tight text-gray-900 dark:text-white">$12</span>
                  <span class="text-base text-gray-600 dark:text-gray-400">/month</span>
                </p>
              </div>

              <a
                href="https://buy.stripe.com/6oEcQn8Da1LldmUcTs"
                class="mt-8 block rounded-md bg-blue-600 px-8 py-3 text-center text-sm font-semibold leading-6 text-white shadow-sm hover:bg-blue-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600 transition-all duration-200 hover:scale-[1.02] active:scale-[0.98]"
              >
                Join Now
              </a>

              <div class="mt-8 space-y-4">
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Unlimited questions</span>
                </div>
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Interactive maps & routing</span>
                </div>
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Venue & local information</span>
                </div>
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Cancel anytime</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        {/* Pro Teaser Card */}
        <div class="relative group">
          <div class="absolute -inset-1 bg-gradient-to-r from-purple-600 to-pink-600 rounded-xl blur-md opacity-25 group-hover:opacity-50 transition duration-1000 group-hover:duration-200"></div>
          <div class="relative bg-white dark:bg-gray-900 ring-1 ring-gray-200 dark:ring-gray-800 rounded-xl p-8 sm:p-10">
            <div class="flex flex-col">
              <div>
                <h3 class="text-2xl font-semibold text-center text-gray-900 dark:text-white">
                  âœ¨ Pro
                </h3>
                <p class="mt-4 text-center text-gray-600 dark:text-gray-400">
                  Enhanced features for serious touring
                </p>
                <p class="mt-8 flex items-baseline justify-center gap-x-2">
                  <span class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">Coming Later This Year</span>
                </p>
              </div>

              <div class="mt-8 block rounded-md bg-gray-100 dark:bg-gray-800 px-8 py-3 text-center text-sm font-semibold leading-6 text-gray-600 dark:text-gray-400">
                Coming Soon
              </div>

              <div class="mt-8 space-y-4">
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Deep workflow integration</span>
                </div>
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Real-time data insights</span>
                </div>
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Advanced touring tools</span>
                </div>
                <div class="flex items-center">
                  <svg class="h-6 w-6 text-purple-600 dark:text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  <span class="ml-3 text-gray-600 dark:text-gray-400">Priority support</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</WidgetWrapper>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .group:hover {
    animation: float 3s ease-in-out infinite;
  }
</style>
