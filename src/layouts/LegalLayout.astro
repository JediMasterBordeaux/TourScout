---
const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{frontmatter.title} - ConcertIndustry.com</title>
    <link rel="stylesheet" href="/styles/base.css" />
  </head>
  <body class="bg-white dark:bg-gray-900 text-gray-900 dark:text-gray-100">
    <div class="min-h-screen">
      <main>
        <section class="px-4 py-16 sm:px-6 mx-auto lg:px-8 lg:py-20 max-w-4xl">
          <div class="flex justify-between items-center mb-8">
            <h1 class="text-4xl font-bold">{frontmatter.title}</h1>
            <a href="/" class="bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">Back to Home</a>
          </div>
          <div class="prose max-w-4xl dark:prose-invert">
            <slot />
          </div>
        </section>
      </main>
    </div>
  </body>
</html> 