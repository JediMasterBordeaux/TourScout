---
import TourScoutLayout from '../layouts/TourScoutLayout.astro';

const metadata = {
  title: 'Chat with TourScout - Your AI Tour Assistant',
  description: 'Get instant help with tour routing, crew dynamics, and venue logistics from your AI tour assistant.',
};
---

<TourScoutLayout title={metadata.title} description={metadata.description}>
  <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-2xl">
      <div class="bg-white shadow-xl ring-1 ring-gray-900/5 sm:rounded-xl">
        <div class="flex h-[600px] flex-col">
          <!-- Chat Header -->
          <div class="flex items-center justify-between border-b border-gray-200 px-4 py-3">
            <div class="flex items-center space-x-3">
              <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center">
                <span class="text-white text-sm">TS</span>
              </div>
              <div>
                <h2 class="text-sm font-semibold text-gray-900">TourScout Assistant</h2>
                <p class="text-xs text-gray-500">Always here to help with your tour planning</p>
              </div>
            </div>
          </div>

          <!-- Chat Messages -->
          <div class="flex-1 overflow-y-auto p-4 space-y-4">
            <div class="flex items-start">
              <div class="flex-shrink-0">
                <div class="h-8 w-8 rounded-full bg-indigo-600 flex items-center justify-center">
                  <span class="text-white text-sm">TS</span>
                </div>
              </div>
              <div class="ml-3">
                <p class="text-sm text-gray-900">Hi! I'm TourScout, your AI tour assistant. I can help you with:</p>
                <ul class="mt-2 text-sm text-gray-600 space-y-1">
                  <li>• Tour routing and drive times</li>
                  <li>• Hotel and stopover planning</li>
                  <li>• Venue logistics and load-in access</li>
                  <li>>• Local crew recommendations</li>
                  <li>• Wellness resources and amenities</li>
                </ul>
                <p class="mt-2 text-sm text-gray-900">What would you like help with today?</p>
              </div>
            </div>
          </div>

          <!-- Chat Input -->
          <div class="border-t border-gray-200 px-4 py-3">
            <div class="flex space-x-4">
              <div class="flex-1">
                <input
                  type="text"
                  placeholder="Ask me anything about your tour..."
                  class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"
                />
              </div>
              <button
                type="button"
                class="inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600"
              >
                Send
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</TourScoutLayout> 